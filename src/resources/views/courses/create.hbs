<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/courses/store">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học </label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Tên khóa học">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả </label>
            <textarea type="text" class="form-control" id="description" name="description"></textarea>
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Level </label>
            <input type="text" class="form-control" id="level" name="level" placeholder="Level">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video ID </label>
            <input type="text" class="form-control" id="videoId" name="videoId" placeholder="Video ID">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>